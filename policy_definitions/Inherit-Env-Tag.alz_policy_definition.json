{
  "name": "Inherit-Env-Tag",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Inherit env tag from parent resource",
    "policyType": "Custom",
    "mode": "All",
    "description": "Automatically inherits the env tag from the parent resource. If the tag is updated to another permitted value, it will reinherit the value from the parent.",
    "metadata": {
      "category": "Tags",
      "version": "1.0.0",
      "source": "https://github.com/richeney-org/citadel-custom-lib"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "tags['env']",
            "notEquals": "[subscription().tags['env']]"
          },
          {
            "value": "[subscription().tags['env']]",
            "notEquals": ""
          }
        ]
      },
      "then": {
        "effect": "modify",
        "details": {
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "tags['env']",
              "value": "[subscription().tags['env']]"
            }
          ]
        }
      }
    }
  }
}