{
  "properties": {
    "displayName": "Deny Resource Group Creation if Subscription 'env' Tag Missing",
    "policyType": "Custom",
    "mode": "All",
    "description": "Denies the creation of a resource group if the parent subscription does not have an 'env' tag defined.",
    "metadata": {
      "category": "Tags",
      "version": "1.0.0"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Resources/subscriptions/resourceGroups"
          },
          {
            "field": "parent.tags['env']",
            "exists": false
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  },
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "deny-rg-if-subscription-env-tag-missing",
  "scope": "subscription"
}
