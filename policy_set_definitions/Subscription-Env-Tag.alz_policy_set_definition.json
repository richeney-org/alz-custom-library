{
  "name": "Subscription-Env-Tag",
  "type": "Microsoft.Authorization/policySetDefinitions",
  "properties": {
    "displayName": "Subscription env tag",
    "description": "Policy set to manage environment tags at subscription scope including auditing, inheritance, and resource group creation controls.",
    "policyType": "Custom",
    "metadata": {
      "category": "Tags",
      "version": "1.0.0",
      "source": "https://github.com/richeney-org/citadel-custom-lib"
    },
    "parameters": {
      "allowedValues": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed values for env tag",
          "description": "List of permitted values for the env tag"
        },
        "defaultValue": [
          "prod",
          "uat",
          "staging",
          "dev"
        ]
      }
    },
    "policyDefinitions": [
      {
        "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/contoso/providers/Microsoft.Authorization/policyDefinitions/audit-env-tag",
        "policyDefinitionReferenceId": "AuditEnvTag",
        "parameters": {
          "allowedValues": {
            "value": "[parameters('allowedValues')]"
          }
        }
      },
      {
        "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/contoso/providers/Microsoft.Authorization/policyDefinitions/inherit-env-tag",
        "policyDefinitionReferenceId": "InheritEnvTag"
      }
    ]
  }
}