            "actions": "az provider operation show --namespace Microsoft.Fabric --query 'resourceTypes[].operations[].name'"
        },
        "type": "CustomRole",
        "permissions": [
            {
                "actions": [
                    "Microsoft.Authorization/*/read",
                    "Microsoft.Fabric/capacities/read",
                    "Microsoft.Fabric/capacities/write",
                    "Microsoft.Fabric/capacities/delete",
                    "Microsoft.Fabric/capacities/suspend/action",
                    "Microsoft.Fabric/capacities/resume/action",
                    "Microsoft.Fabric/locations/checkNameAvailability/action",
                    "Microsoft.Fabric/locations/operationresults/read",
                    "Microsoft.Fabric/locations/operationstatuses/read",
                    "Microsoft.Fabric/operations/read",
                    "Microsoft.Fabric/skus/read",
                    "Microsoft.Fabric/capacities/skus/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/write",
                    "Microsoft.Fabric/privateLinkServicesForFabric/delete",
                    "Microsoft.Fabric/privateLinkServicesForFabric/operationResults/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/operationStatuses/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/privateLinkResources/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/privateEndpointConnections/read",
                    "Microsoft.Fabric/privateLinkServicesForFabric/privateEndpointConnections/write",
                    "Microsoft.Fabric/privateLinkServicesForFabric/privateEndpointConnections/delete",
                    "Microsoft.Resources/*/read",
                    "Microsoft.Resources/subscriptions/resourceGroups/write",
                    "Microsoft.Resources/tags/*"
                ],
                "notActions": [
                    "Microsoft.Resources/subscriptions/resourceGroups/delete"
                ],
                "dataActions": [],
                "notDataActions": []
            }
        ],
        "assignableScopes": [
            "${current_scope_resource_id}"
        ]
    }
