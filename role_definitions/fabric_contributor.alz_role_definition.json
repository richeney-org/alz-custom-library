{
    "name": "3e9a7c54-2f6b-4d1e-95f1-4c2b9a6d0f3a",
    "type": "Microsoft.Authorization/roleDefinitions",
    "apiVersion": "2022-04-01",
    "properties": {
        "roleName": "Fabric-Contributor",
        "description": "Contributor for Microsoft Fabric Capacities and Private Link Services. Should be configured as PIM-eligible.",
